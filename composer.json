{
    "name": "douglasgreen/php-linter",
    "description": "Linter for PHP",
    "license": "MIT",
    "type": "project",
    "homepage": "https://github.com/douglasgreen/php-linter",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas@nurd.site",
            "homepage": "https://nurd.site/",
            "role": "Developer"
        }
    ],
    "keywords": [
        "ast",
        "code quality",
        "code standards",
        "code validation",
        "linter",
        "php",
        "php-fig",
        "php parser",
        "psr",
        "static analysis",
        "syntax check"
    ],
    "autoload": {
        "psr-4": {
            "DouglasGreen\\PhpLinter\\": "src/",
            "DouglasGreen\\PhpLinter\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/douglasgreen/config-setup"
        },
        {
            "type": "vcs",
            "url": "https://github.com/douglasgreen/optparser"
        },
        {
            "type": "vcs",
            "url": "https://github.com/douglasgreen/utility"
        }
    ],
    "require": {
        "php": ">=8.1",
        "douglasgreen/optparser": "dev-main",
        "douglasgreen/utility": "dev-main",
        "nikic/php-parser": "^4.19"
    },
    "require-dev": {
        "douglasgreen/config-setup": "dev-main",
        "pdepend/pdepend": "^2.16",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^10.5",
        "rector/rector": "^1.1",
        "symplify/easy-coding-standard": "^12.3"
    },
    "scripts": {
        "lint": [
            "ecs",
            "phpstan analyse",
            "phpmd --cache --cache-file var/cache/phpmd/cache.php . text phpmd.xml",
            "rector --dry-run"
        ],
        "lint:fix": [
            "ecs --fix",
            "rector"
        ],
        "post-install-cmd": "vendor/douglasgreen/config-setup/bin/copy_files.php",
        "post-update-cmd": "vendor/douglasgreen/config-setup/bin/copy_files.php",
        "test": "phpunit"
    }
}
